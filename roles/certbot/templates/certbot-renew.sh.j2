#!/bin/sh
### BEGIN INIT INFO
# Provides:          certbot-renew
# Required-Start:    $network $remote_fs
# Required-Stop:     $network $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Certbot renewal script
# Description:       Script to handle Certbot certificate renewal
### END INIT INFO

case "$1" in
  renew)
    /usr/bin/certbot renew --quiet --agree-tos --cert-name {{ certbot_common_name }}
    ;;
  *)
    echo "Usage: $0 {renew}"
    exit 1
    ;;
esac

exit 0